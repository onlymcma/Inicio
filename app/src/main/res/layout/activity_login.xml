<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/introduce_tu_password" android:id="@+id/txtPassword" android:textColorHint="#252728"
            android:textColor="#C9FFFFFF"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/escribe_tu_mail" android:textColor="#FFEB3B" android:textColorHint="#252728"
            android:id="@+id/txtEmail"/>
</LinearLayout>